<style>
.article .content.content-ellipsis {
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 4;
    overflow: hidden;
    font-size: 14px;
    margin-bottom: 5px;
    line-height: 25px;
    height: 100px;
    word-break: break-all;
    color: #333;
}

</style>
<% page.posts.each(function(post){ %>
    <%- partial('common/article', { post: {...post, slim: true}, index: true }) %>
<% }); %>
<% if (page.total > 1) { %>
    <%- partial('common/paginator') %>
<% } %>
